# AutoRL Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==================== Core Configuration ====================
ENVIRONMENT=development
PORT=8000
RELOAD=true

# ==================== AI/LLM Configuration ====================
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# ==================== Database & Storage ====================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=optional_qdrant_key

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# ==================== Mobile Automation ====================
APPIUM_HOST=localhost
APPIUM_PORT=4723

# ==================== CORS Configuration ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== Open Mobile Hub (OMH) Integration ====================

# OMH Authentication
OMH_CLIENT_ID=your_omh_client_id_here
OMH_CLIENT_SECRET=your_omh_client_secret_here
OMH_AUTH_URL=https://auth.openmobilehub.org/oauth/authorize
OMH_TOKEN_URL=https://auth.openmobilehub.org/oauth/token
OMH_USER_INFO_URL=https://auth.openmobilehub.org/oauth/userinfo

# OMH Maps
OMH_MAPS_API_KEY=your_omh_maps_api_key_here
OMH_MAPS_API_URL=https://maps.openmobilehub.org/api/v1

# OMH Feature Flags
OMH_AUTH_ENABLED=true
OMH_MAPS_ENABLED=true

# Note: If OMH credentials are not provided, the system will run in mock/demo mode
# which is suitable for development and testing without actual OMH services.

# ==================== Security ====================
SECRET_KEY=your_secret_key_for_jwt_signing
ENCRYPTION_KEY=your_32_byte_encryption_key

# ==================== Monitoring ====================
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# ==================== Production Settings ====================
# Uncomment and configure for production deployment
# ENVIRONMENT=production
# RELOAD=false
# LOG_LEVEL=WARNING

